SRCDIR=./source
INCDIR=./include
CC=gcc-13
INCLUDE=/opt/homebrew/include

SDL2_INCLUDE=/opt/homebrew/include/SDL2   # SDL2 include path
SDL_IMAGE_INCLUDE=/opt/homebrew/Cellar/sdl2_image/2.8.2_1/include/SDL2   # SDL_image include path
CFLAGS=-g -I$(INCLUDE) -I$(SDL2_INCLUDE) -I$(SDL_IMAGE_INCLUDE) -c
LIBS=/opt/homebrew/lib
LDFLAGS=-lSDL2main -lSDL2_image -lSDL2

footballGame: main.o ball.o
	$(CC) main.o ball.o -o footballGame $(LDFLAGS) -L$(LIBS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c -o main.o

ball.o: $(SRCDIR)/ball.c $(INCDIR)/ball.h
	$(CC) $(CFLAGS) $(SRCDIR)/ball.c -o ball.o

clean:
	rm -f footballGame
	rm -f main.o
	rm -f ball.o
